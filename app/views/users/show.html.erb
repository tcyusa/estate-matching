<div class="row">
    <aside class="col-sm-3">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><%= @user.name %></h3>
            </div>
            <div class="card-body">
                <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
            </div>
        </div>
    </aside>
    <div class="col-sm-9">
        <div class="container">
            <h3>オファー内容</h3>
            <div class="row float-right mb-2">
                <%= link_to '編集', edit_offer_path(@offer.id), class: 'btn btn-success mr-2' %> 
            </div>
        </div>
        
        <% if @offer != nil %>
            <table class="table">
                <tr>
                    <td style="width: 20%">希望地域</td>
                    <td>
                        <% @offer.cities.each do |c| %>
                            <span style="margin-right: 5px"><%= c.name %></span>
                        <% end %>
                    </td>
                </tr>
                <tr>
                    <td>家賃</td>
                    <td><%= @offer.min_price.to_s %>円 〜 <%= @user.offer.max_price.to_s %>円</td>
                </tr>
                <tr>
                    <td>築年数</td>
                    <td><%= @offer.years.to_s %>年以内</td>
                </tr>
                <tr>
                    <td>駅徒歩</td>
                    <td><%= @offer.walking_time.to_s %>分以内</td>
                </tr>
                <tr>
                    <td>専有面積</td>
                    <td><%= @offer.min_size.to_s %>平米以上</td>
                </tr>
                <tr>
                    <td>家族構成</td>
                    <td>
                        <% if @offer.is_family %>ファミリー
                        <% else %>単身
                        <% end %>
                    </td>
                </tr>
                <tr>
                    <td>こだわり条件</td>
                    <td>
                        <% @offer.choices.each do |c| %>
                            <div><%= c.content %></div>
                        <% end %>
                    </td>
                </tr>
            </table>
        <% end %>
    </div>
</div>
