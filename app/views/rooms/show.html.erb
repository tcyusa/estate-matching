<h1><%= @room.name %>とのメッセージ</h1>

<% @messages.each do |m| %>
    <div><%= m.user.name %></div>
    <%= m.content %>
<% end %>

<%= form_with(model: @message, local: true) do |f| %>
  <%= f.text_field :content %>
  <%= f.hidden_field :room_id, :value => @room.id %>
  <br>
  <%= f.submit "送信する" %>
<% end %>

<%= link_to 'メッセージ一覧に戻る', rooms_path %>