<h1 class="mb-2">メッセージ詳細</h1>

<div class="row float-right mb-2">
    <%= link_to "#{@opponent.name}の詳細", user_path(@opponent), class: 'btn btn-primary mr-2' %> 
</div>

<table class="table">
    <% @messages.each do |m| %>
        <tr>
            <td>
                <div class="message">
                    <div class="row mb-1 justify-content-between">
                        <h5><%= m.user.name %></h5>
                        <span><%= m.created_at %></span>
                    </div>
                    <%= m.content %>
                </div>
            </td>
        </tr>
    <% end %>
</table>

    <%= form_with(model: @message, local: true) do |f| %>
      <%= f.text_area :content, size: "136x3" %>
      <%= f.hidden_field :entry_id, :value => @entry.id %>
      <br>
      <div class="float-right">
          <%= f.submit "送信する", class: 'btn btn-primary justify-content-end'%>
      </div>
    <% end %>
    
    <br>
    <%= link_to 'メッセージ一覧に戻る', entries_path %>
</div>
